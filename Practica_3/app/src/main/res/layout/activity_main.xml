<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="proyecto.ejemplo.holamundo.reke.practica_3.MainActivity">

    <TextView
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero1"
        android:layout_marginTop="21dp"
        android:layout_marginStart="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:labelFor="@+id/cnum1"/>

    <EditText
        android:id="@+id/cnum1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/num1"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintLeft_toLeftOf="@+id/num1" />

    <TextView
        android:id="@+id/oper"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="19dp"
        android:labelFor="@+id/coper"
        android:text="@string/operacion"
        app:layout_constraintLeft_toLeftOf="@+id/cnum1"
        app:layout_constraintStart_toStartOf="@+id/cnum1"
        app:layout_constraintTop_toBottomOf="@+id/cnum1" />

    <EditText
        android:id="@+id/coper"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/oper"
        app:layout_constraintTop_toBottomOf="@+id/oper"
        app:layout_constraintLeft_toLeftOf="@+id/oper" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero2"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/coper"
        app:layout_constraintTop_toBottomOf="@+id/coper"
        app:layout_constraintLeft_toLeftOf="@+id/coper"
        android:labelFor="@+id/cnum2"/>

    <EditText
        android:id="@+id/cnum2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="@+id/num2"
        app:layout_constraintTop_toBottomOf="@+id/num2"
        app:layout_constraintLeft_toLeftOf="@+id/num2" />

    <TextView
        android:id="@+id/resum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resulltado"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/cnum2"
        app:layout_constraintTop_toBottomOf="@+id/cnum2"
        app:layout_constraintLeft_toLeftOf="@+id/cnum2" />

    <Button
        android:id="@+id/sumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/operacion"
        app:layout_constraintTop_toBottomOf="@+id/resum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
